<h1><%= link_to "Spaces", :action => "index" %> &gt; <%= link_to @space.name, space_url(@space.alias) %> </h1>

<% if @discussions.empty? %>
	<div class="info">An empty space is an useless space. Create some discussions, for your own sake!</div>
<% end %>
<%= link_to 'Create new discussion', :controller => 'discussion', :action => 'new', :id => @space.id %>

<%= render :partial => "discussion", :collection => @discussions %>