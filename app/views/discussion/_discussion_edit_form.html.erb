<fieldset>
<% form_for :discussion, @discussion, :url => { :action => 'update', :id => params[:id] } do |f| %>
	Body: <br/>
	<%= textile_editor "discussion", "body", :rows => 20, :cols => 50, :tabindex => 2 %><br/>
	<%= f.hidden_field :space_id, :value => params[:id] %>
	
	<%= submit_tag 'Save' %>
	<%= textile_editor_initialize -%>
<% end %>
</fieldset>